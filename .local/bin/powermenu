#!/bin/bash

lock="  Lock"
logout="󰍃  Logout"
poweroff="⏻  Poweroff"
reboot="  Reboot"
sleep="  Suspend"
firmware="  Firmware Setup"

selected_option=$(echo "$poweroff
$lock
$reboot
$sleep
$logout
$firmware" | wofi --show dmenu -p "Power Menu:" )

if [ "$selected_option" == "$lock" ]
then
  hyprlock
elif [ "$selected_option" == "$logout" ]
then
 loginctl terminate-user `whoami`
elif [ "$selected_option" == "$poweroff" ]
then
  systemctl poweroff
elif [ "$selected_option" == "$reboot" ]
then
  systemctl reboot
elif [ "$selected_option" == "$sleep" ]
then
  hyprlock & sleep 2 && systemctl suspend
elif [ "$selected_option" == "$firmware" ]
then
	systemctl reboot --firmware-setup
else
  echo "No match"
fi
